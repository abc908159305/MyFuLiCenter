<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:gravity="center_vertical">
        <RadioButton
            android:id="@+id/btn_NewGoods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_menu_item_new_good"
            android:text="新品"
            android:textColor="@color/main_botton_text_color"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:button="@null"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/btn_Boutique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_menu_item_boutique"
            android:text="精选"
            android:textColor="@color/main_botton_text_color"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/btn_Category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_menu_item_category"
            android:text="分类"
            android:textColor="@color/main_botton_text_color"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:button="@null"
            />
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvCartHint"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="10"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/cart_hint"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                />

            <RadioButton
                android:id="@+id/btn_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/selector_menu_item_cart"
                android:text="购物车"
                android:textColor="@color/main_botton_text_color"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:textSize="16dp"
                android:button="@null"
                />
        </RelativeLayout>

        <RadioButton
            android:id="@+id/btn_PersonalCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_menu_item_personal_center"
            android:text="我"
            android:textColor="@color/main_botton_text_color"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:button="@null"
            />
        </LinearLayout>
</RelativeLayout>
